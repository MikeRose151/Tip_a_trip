<% if params[:user_id].nil? %>
<%# if the URI pattern is /itineraries then show this %>

<div>

  <div class="itineraries">
    <%@itineraries.each do |itinerary|%>
      <% if itinerary.public? %>
        <%= link_to itinerary_path(itinerary) do %>
          <div class="card-itinerary">
            <%= cl_image_tag itinerary.destination.photo.key %>
            <div class="sidebar">
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    </div>
  </div>

<% elsif params[:user_id] %>
<%# if the URI pattern is users/:id/itineraries then show this %>

  <div>
    <h1> Your itineraries: </h1>
    <div class="itineraries">
      <% @itineraries.each do |itinerary|%>
        <% if itinerary.user == current_user %>
          <%= link_to itinerary_path(itinerary) do %>
            <div class="card-itinerary">
              <img src="https://images.unsplash.com/photo-1673529553057-a7101e6c5c69?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80">
              <div class="sidebar">
                <i class="fa-solid fa-angle-right"></i>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

<% end %>
