<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="itinerary-show-title-card">
        <h1>Let's build your new itinerary</h1>
        <div class="itinerary-show-title-card-subtitle">
          <p class="itinerary-show-title-card-subtitle-text">
            Complete the form below to get started
          </p>
          <p class="itinerary-show-title-card-subtitle-text">
            <%# <span><i class="fa-solid fa-pencil"></i><%= current_user.username</span> %>
          </p>
        </div>
      </div>
      <div class="card-new-itinerary-form">
        <%= simple_form_for @itinerary do |f| %>
          <%= f.input :destination, collection: @destination_cities.sort, include_blank: '--Select the destination of your trip!--', required: true, label: 'Destination' %>

          <%= f.input :title, placeholder: "E.g. 'Hidden Gems', 'Must-Sees', 'For All The Family', 'A Foodie's Dream'", required: true, label: 'Title' %>

          <%= f.input :start_date, required: true, as: :date, html5: true %>
          <% if @itinerary.errors[:start_date].any? %>
            <%= @itinerary.errors[:start_date].first %>
          <% end %>

          <%= f.input :end_date, required: true, as: :date, html5: true %>
          <% if @itinerary.errors[:end_date].any? %>
            <%= @itinerary.errors[:end_date].first %>
          <% end %>

          <div class="d-flex justify-content-center">
            <%= f.submit value="Get Started", class: "dark"%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <%# <div id="destination-image"> %>
        <%= image_tag "globe.png", class: "destination-image" %>
      <%# </div> %>
    </div>
  </div>
</div>
