
<div class="home-background">

  <div class="row">
    <div class="col-6 logotext">
      <%= image_tag "logo.png", class: "image" %>
    </div>
    <div class="col-6 hometext">
      <div class="card" style="width: 30rem;">
        <div class="card-body">
          <h5 class="card-title fonttitle">Weclome to Tip-a-Trip</h5>
          <h6 class="card-subtitle mb-2 text-muted"> </h6>
          <p class="card-text font">
            A platform that holds a collection of other user's itineraries you can take inspiration from, and where you can reminisce over your own holidays.
          </p>
          <p class="card-text font centre">
            Create. Share. Travel.
          </p>
          <%= link_to "[Browse itineraries CTA]", itineraries_path %>
          <%= link_to "[Create itinerary CTA]", new_itinerary_path %>
          [Some fake reviews]
        </div>
      </div>
    </div>
  </div>
</div>


<footer class="footer">
  <marquee scrollamount="15" direction="right" style="object-fit:fill;">
    <%= image_tag "plane.png", height: 60 %>
  </marquee>
</footer>
