<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <% if current_user %>
      <div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
          <li class="nav-item button d-flex ">
              <%= link_to "Browse Itineraries", itineraries_path,
              class: "btn btn-outline-success btn-outline-light rounded-pill my-2 my-sm-0 btn-create-new" %>
              <%= link_to "Build Your Itinerary", new_itinerary_path, class: "btn btn-outline-success btn-outline-light rounded-pill my-2 my-sm-0 btn-create-new" %>
          </li>
            <li class="nav-item dropdown">
            <% if current_user.photo.key %>
              <%= cl_image_tag current_user.photo.key, class: "avatar-show-edit dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "avatar.png", class: "avatar-show-edit dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
              <div class="dropdown-menu dropdown-menu-end animate__animated animate__flipInX" aria-labelledby="navbarDropdown">
                <%= link_to "🏠 Home", root_path, class: "dropdown-item" %>
                <%= link_to "🛬 Your Dashboard", user_itineraries_path(current_user), class: "dropdown-item" %>
                <%= link_to "🚪 Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
